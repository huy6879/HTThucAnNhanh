@model HeThongDatThucAn20.Areas.Admin.Models.ProductModels

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>ProductModels</h4>
