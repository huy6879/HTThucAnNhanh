                                <i class="fas fa-user-circle fa-2x"></i>
                            </a>
                        }
                        <a asp-action="ListCart" asp-controller="Cart" class="position-relative me-4 my-auto" style="margin-right: 20px;">
                            <i class="fa fa-cart-plus fa-2x" style="position: relative;"></i>
                            <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -10px; left: 15px; height: 20px; min-width: 20px;">@ViewBag.SL</span>
