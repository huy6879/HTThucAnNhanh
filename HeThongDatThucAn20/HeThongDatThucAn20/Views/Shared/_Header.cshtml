                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Về chúng tôi
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <a class="dropdown-item" href="about.html">Thông Tin</a>
                                <a class="dropdown-item" href="contact.html">Chi Nhánh</a>
                            </div>

                        </li>
                    </ul>
                    <div class="d-flex m-3 me-0 align-items-center">

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a asp-action="Profile" asp-controller="KhachHang" class="my-auto" title="Thông tin khách hàng" style="margin-right: 20px;">
                                <i class="fas fa-id-card fa-2x"></i><p>@Context.User.Identity.Name</p>
                            </a>
                            <a asp-action="DangXuat" asp-controller="KhachHang" class="my-auto" style="margin-right: 20px;">
